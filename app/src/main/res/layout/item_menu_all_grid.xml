<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/allmenuGrid_imgView"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/img_subway"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/allmenuGrid_imgView"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/allmenuGrid_nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="에그참치마요"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/allmenuGrid_priceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4900원"
                    android:textColor="@color/colorTextDarkPink"
                    android:textSize="12dp"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/allmenuGrid_infoTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="에그 스크램블 + 핫소스+ 칠리 +후추 +토마토 + 베이컨 + 옥수수콘 + 슈레드치즈.."
                    android:textColor="#525252"
                    android:textSize="11dp"
                    android:paddingLeft="2dp"
                    android:layout_below="@id/allmenuGrid_nameTv"
                    android:paddingTop="4dp"
                    android:maxLines="3"/>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#BEBEBE"
                    android:layout_below="@id/allmenuGrid_infoTv"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="2dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view">

                    <RatingBar
                        android:id="@+id/allmenuGrid_ratingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:isIndicator="false"
                        android:max="5"
                        android:numStars="5"
                        android:progressTint="#FAC917"
                        android:rating="4"
                        android:stepSize="0.5" />

                    <TextView
                        android:id="@+id/allmenuGrid_starTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/allmenuGrid_ratingBar"
                        android:paddingLeft="4dp"
                        android:text="4.0"
                        android:textColor="@color/colorPrimary"
                        android:textSize="9dp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/allmenuGrid_starPeoCntTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/allmenuGrid_starTv"
                        android:paddingLeft="4dp"
                        android:text="(28)"
                        android:textColor="#9b9b9b"
                        android:textSize="9dp"
                        android:layout_centerVertical="true"/>

                    <ToggleButton
                        android:id="@+id/allmenuGrid_heartBtn"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_toLeftOf="@+id/allmenuGrid_heartCnt"
                        android:background="@drawable/button_heart"
                        android:checked="false"
                        android:text=""
                        android:textOff=""
                        android:textOn=""
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/allmenuGrid_heartCnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="4dp"
                        android:text="163"
                        android:textSize="9dp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>