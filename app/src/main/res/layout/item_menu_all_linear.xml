<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/allmenuLinear_menuImgView"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:elevation="10dp"
        android:src="@drawable/img_subway" />


    <android.support.v7.widget.CardView
        android:layout_width="310dp"
        android:layout_height="110dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/allmenuLinear_priceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4900원"
                android:layout_alignParentRight="true"
                android:background="@drawable/left_corner_darkpink"
                android:textColor="#fff"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingLeft="14dp"
                android:paddingRight="10dp"
                android:textSize="12dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="110dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/allmenuLinear_menuImgView"
        android:elevation="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/allmenuLinear_nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="에그참치마요"
            android:textColor="#000"
            android:textSize="15dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="32dp"
            android:background="#C8C8C8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="14dp"
            android:paddingRight="16dp"
            android:paddingTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/allmenuLinear_infoTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="에그 스크램블 + 핫소스+ 칠리 +후추 +토마토 + 베이컨 + 옥수수콘 + 슈레드치즈.."
                android:textColor="#525252"
                android:textSize="11dp"
                android:paddingLeft="2dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp">

                <RatingBar
                    android:id="@+id/allmenuLinear_ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:max="5"
                    android:numStars="5"
                    android:progressTint="#FAC917"
                    android:rating="4"
                    android:stepSize="0.5" />

                <TextView
                    android:id="@+id/allmenuLinear_starTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/allmenuLinear_ratingBar"
                    android:paddingLeft="4dp"
                    android:text="4.0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/allmenuLinear_starPeoCntTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/allmenuLinear_starTv"
                    android:paddingLeft="4dp"
                    android:text="(28)"
                    android:textColor="#9b9b9b"
                    android:textSize="12dp" />

                <ToggleButton
                    android:id="@+id/allmenuLinear_heartBtn"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_toLeftOf="@+id/allmenuLinear_heartCnt"
                    android:background="@drawable/button_heart"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:id="@+id/allmenuLinear_heartCnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="4dp"
                    android:text="163"
                    android:textSize="12dp" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>