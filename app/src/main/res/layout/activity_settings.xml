<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <android.support.v7.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/settings_backIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="설정"
                android:textColor="#000000"
                android:textSize="@dimen/toolbar_textSize" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E6E6E6" />

    <RelativeLayout
        android:id="@+id/settings_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_list_height"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:textColor="#000"
            android:textSize="@dimen/settings_title_textSize"
            android:layout_marginLeft="@dimen/settings_list_margin"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            android:tint="@android:color/darker_gray"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/settings_list_arrow_margin"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#F4F3F3" />

    <RelativeLayout
        android:id="@+id/settings_aboutDevelper"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_list_height"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개발자 소개"
            android:textColor="#000"
            android:textSize="@dimen/settings_title_textSize"
            android:layout_marginLeft="@dimen/settings_list_margin"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            android:tint="@android:color/darker_gray"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/settings_list_arrow_margin"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E6E6E6" />

    <RelativeLayout
        android:id="@+id/settings_bugReport"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_list_height"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버그 신고"
           android:textColor="#000"
            android:textSize="@dimen/settings_title_textSize"
            android:layout_marginLeft="@dimen/settings_list_margin"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            android:tint="@android:color/darker_gray"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/settings_list_arrow_margin"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E6E6E6" />

</LinearLayout>