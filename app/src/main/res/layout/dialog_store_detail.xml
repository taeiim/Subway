<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/burgerIcon"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:elevation="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_burger" />

    <android.support.v7.widget.CardView
        android:id="@+id/storeDialog_cardView"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:background="@color/colorWhite"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="45dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/img_store_dialog_top"
                    android:scaleType="fitXY"/>

                <RelativeLayout
                    android:id="@+id/cancel_button"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="14dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/storeDialog_storeNameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingBottom="20dp"
                        android:text="대전카이스트점"
                        android:textColor="#000"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:paddingTop="20dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/storeDialog_storeNameTv"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="32dp">

                        <TextView
                            android:id="@+id/tellTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="연락처     ㅣ"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/storeDialog_tellNumTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@id/tellTv"
                            android:text="042-863-3424"
                            android:textColor="#000"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/storeDialog_callIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="14dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_call"
                            android:layout_marginTop="2dp"/>

                        <RelativeLayout
                            android:id="@+id/timeInfoLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@id/tellTv"
                            android:paddingTop="4dp">
                            <TextView
                                android:id="@+id/timeTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="영업시간 ㅣ"
                                android:textSize="14dp"/>

                            <TextView
                                android:id="@+id/storeDialog_timeTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_toRightOf="@id/timeTv"
                                android:text="08:00 ~ 23:00"
                                android:textColor="#000"
                                android:textSize="14dp"/>

                            <TextView
                                android:id="@+id/storeDialog_24Icon"
                                android:layout_width="50dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:text="24시간"
                                android:textColor="#FFFFFF"
                                android:background="@drawable/back_yellow_24"
                                android:textSize="11dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:visibility="gone"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/timeInfoLayout"
                            android:paddingTop="12dp">

                            <TextView
                                android:id="@+id/addTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="주소"
                                android:textSize="14dp"/>

                            <View
                                android:layout_width="60dp"
                                android:layout_height="1dp"
                                android:layout_below="@id/addTv"
                                android:background="#BDBDBD"
                                android:layout_marginTop="4dp"/>
                            <TextView
                                android:id="@+id/storeDialog_findRoadBtn"
                                android:layout_width="60dp"
                                android:layout_height="22dp"
                                android:background="@drawable/store_address_spinner"
                                android:layout_alignParentRight="true"
                                android:text="길찾기"
                                android:textSize="11dp"
                                android:gravity="center"
                                android:textColor="#000"/>

                            <TextView
                                android:id="@+id/storeDialog_addressTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/addTv"
                                android:layout_marginTop="10dp"
                                android:text="대전광역시 유성구 어쩌구 저쩌구123-11 하하호호히히"
                                android:textColor="#000"
                                android:textSize="13dp"
                                android:maxLines="2"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">


                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    </RelativeLayout>
</RelativeLayout>