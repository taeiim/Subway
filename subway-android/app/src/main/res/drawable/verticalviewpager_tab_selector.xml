<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:width="12dp" android:height="8dp"
                android:drawable="@drawable/ic_burger_flip"
                android:gravity="center">
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:width="10dp" android:height="5dp" android:gravity="center">
                <shape android:shape="rectangle">
                    <stroke android:color="@color/colorPrimary" android:width="0.8dp" />
                    <corners android:radius="30dp" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>


