<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/honeyDetailReviewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="4.5"
                        android:textColor="#000"
                        android:textSize="26dp" />

                    <RatingBar
                        android:id="@+id/honeyReview_all_ratingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:max="5"
                        android:numStars="5"
                        android:progressTint="@color/colorPrimary"
                        android:rating="4.5"
                        android:secondaryProgressTint="@color/colorPrimary"
                        android:stepSize="0.5" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#dedede" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/score5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/review_progressbar_margin"
                            android:text="5점"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/review_progressbar_textSize" />

                        <ProgressBar
                            android:id="@+id/honeyReview_score5progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/review_progressbar_margin"
                            android:layout_toLeftOf="@id/honeyReview_star5cntTv"
                            android:layout_toRightOf="@id/score5"
                            android:progressBackgroundTint="@color/progressBackGray"
                            android:progressTint="@color/colorPrimary"
                            android:scaleY="2" />

                        <TextView
                            android:id="@+id/honeyReview_star5cntTv"
                            android:layout_width="@dimen/review_progressbar_cntTv_width"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="left"
                            android:text="10"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/review_progressbar_cntTextSize" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/score4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/review_progressbar_margin"
                            android:text="4점"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/review_progressbar_textSize" />

                        <ProgressBar
                            android:id="@+id/honeyReview_score4progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/review_progressbar_margin"
                            android:layout_toLeftOf="@id/honeyReview_star4cntTv"
                            android:layout_toRightOf="@id/score4"
                            android:progressBackgroundTint="@color/progressBackGray"
                            android:progressTint="@color/colorPrimary"
                            android:scaleY="2" />

                        <TextView
                            android:id="@+id/honeyReview_star4cntTv"
                            android:layout_width="@dimen/review_progressbar_cntTv_width"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="left"
                            android:text="10"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/review_progressbar_cntTextSize" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/score3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/review_progressbar_margin"
                            android:text="3점"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/review_progressbar_textSize" />

                        <ProgressBar
                            android:id="@+id/honeyReview_score3progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/review_progressbar_margin"
                            android:layout_toLeftOf="@id/honeyReview_star3cntTv"
                            android:layout_toRightOf="@id/score3"
                            android:progressBackgroundTint="@color/progressBackGray"
                            android:progressTint="@color/colorPrimary"
                            android:scaleY="2" />

                        <TextView
                            android:id="@+id/honeyReview_star3cntTv"
                            android:layout_width="@dimen/review_progressbar_cntTv_width"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="10"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/review_progressbar_cntTextSize" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/score2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/review_progressbar_margin"
                            android:text="2점"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/review_progressbar_textSize" />

                        <ProgressBar
                            android:id="@+id/honeyReview_score2progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/review_progressbar_margin"
                            android:layout_toLeftOf="@id/honeyReview_star2cntTv"
                            android:layout_toRightOf="@id/score2"
                            android:progressBackgroundTint="@color/progressBackGray"
                            android:progressTint="@color/colorPrimary"
                            android:scaleY="2" />

                        <TextView
                            android:id="@+id/honeyReview_star2cntTv"
                            android:layout_width="@dimen/review_progressbar_cntTv_width"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="left"
                            android:text="10"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/review_progressbar_cntTextSize" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/score1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/review_progressbar_margin"
                            android:text="1점"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/review_progressbar_textSize" />

                        <ProgressBar
                            android:id="@+id/honeyReview_score1progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/review_progressbar_margin"
                            android:layout_toLeftOf="@+id/honeyReview_star1cntTv"
                            android:layout_toRightOf="@id/score1"
                            android:progressBackgroundTint="@color/progressBackGray"
                            android:progressTint="@color/colorPrimary"
                            android:scaleY="2" />

                        <TextView
                            android:id="@+id/honeyReview_star1cntTv"
                            android:layout_width="@dimen/review_progressbar_cntTv_width"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="10"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/review_progressbar_cntTextSize" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#F4F3F3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="총 "
                    android:textColor="#000"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/honeyReview_allCntTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/text1"
                    android:text="22"
                    android:textColor="#037939"
                    android:textSize="11dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/honeyReview_allCntTv"
                    android:text="개"
                    android:textColor="#000"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/honeyReview_goodSortTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/view1"
                    android:text="좋아요순"
                    android:textColor="#000"
                    android:textSize="11dp" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/honeyReview_recentSortTv"
                    android:background="#dedede" />

                <TextView
                    android:id="@+id/honeyReview_recentSortTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:text="최신순"
                    android:textColor="#000"
                    android:textSize="11dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="#E6E6E6" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/honeyReview_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


    </RelativeLayout>

</FrameLayout>