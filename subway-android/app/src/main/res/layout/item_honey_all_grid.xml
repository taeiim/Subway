<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/allhoneyGrid_imgView"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/img_blt" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/allhoneyGrid_imgView"
                android:paddingBottom="6dp"
                android:paddingLeft="14dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/allhoneyGrid_nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="에그참치마요"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:paddingLeft="2dp"/>

                <TextView
                    android:id="@+id/allhoneyGrid_priceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="4900원"
                    android:textColor="@color/colorTextDarkPink"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/allhoneyGrid_infoTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/allhoneyGrid_nameTv"
                    android:maxLines="3"
                    android:paddingTop="4dp"
                    android:text="에그 스크램블 + 핫소스+ 칠리 +후추 +토마토 + 베이컨 + 옥수수콘 + 슈레드치즈.."
                    android:textColor="#525252"
                    android:textSize="11dp"
                    android:paddingLeft="2dp"/>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/allhoneyGrid_infoTv"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="6dp"
                    android:background="#DEDEDE" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view">

                    <ImageView
                        android:id="@+id/starIcon"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_star"
                        android:padding="2dp"/>

                    <TextView
                        android:id="@+id/allhoneyGrid_starTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/starIcon"
                        android:paddingLeft="1dp"
                        android:text="4.0"
                        android:textColor="@color/colorPrimary"
                        android:textSize="9dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ic_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/allhoneyGrid_starTv"
                        android:paddingLeft="2dp"
                        android:text="("
                        android:textColor="#9b9b9b"
                        android:textSize="8dp" />

                    <TextView
                        android:id="@+id/allhoneyGrid_starPeoCntTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ic_open"
                        android:text="28"
                        android:textColor="#9b9b9b"
                        android:textSize="9dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/allhoneyGrid_starPeoCntTv"
                        android:text=")"
                        android:textColor="#9b9b9b"
                        android:textSize="8dp" />

                    <LinearLayout
                        android:id="@+id/grid_heartBtnLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/allhoneyGrid_heartBtn"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/button_heart"
                            android:checked="false"
                            android:text=""
                            android:textOff=""
                            android:textOn="" />

                        <TextView
                            android:id="@+id/allhoneyGrid_heartCnt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="163"
                            android:textSize="9dp"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>